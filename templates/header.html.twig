                <div>
                    <a class="btn btn-secondary m-1" href="{{path('logout')}}">Logout</a>
                </div>
            {% else %}
                <div>
                    <a class="btn btn-secondary m-1" href="{{path('login')}}">Login</a>
                </div>
            {% endif %}
